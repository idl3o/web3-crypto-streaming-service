# Docker-specific environment variables
NODE_ENV=production
PORT=8080

# Container configuration
COMPOSE_PROJECT_NAME=web3-crypto-streaming
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# IPFS configuration
IPFS_API_URL=http://ipfs:5001/api/v0
IPFS_GATEWAY_URL=http://ipfs:8080/ipfs/

# Service discovery
APP_URL=http://app:8080
NGINX_URL=http://nginx:80

# Resource limits
MEMORY_LIMIT=2g
CPU_LIMIT=1.0
